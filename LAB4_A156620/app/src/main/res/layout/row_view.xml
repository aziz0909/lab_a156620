<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/row_img_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="18dp"
            app:srcCompat="@drawable/bb1"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/row_view_tv_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/row_view_tv_disc"
            android:layout_alignTop="@+id/row_img_view"
            android:text="TextView"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/row_view_tv_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/row_view_tv_price"
            android:layout_below="@+id/row_view_tv_food_name"
            android:layout_marginTop="11dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="51dp" />

        <TextView
            android:id="@+id/row_view_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/row_img_view"
            android:layout_marginStart="26dp"
            android:layout_toEndOf="@+id/row_img_view"
            android:text="TextView"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="97dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>